<div>
<h2>Service Hours</h3>
<table class="mt-3 table listing">
  <thead>
    <tr>
      <th>Date</th>
      <th>Number of Hours</th>
      <th>Approved</th>
    </tr>
  </thead>
  <tbody>
    <% @service_hours.each do |service| %>
      <tr>
        <td><%= service.formatDate %></td>
        <td><%= service.hours %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div>
<h2>Events</h2>
<table class="mt-3 table listing">
  <thead>
    <tr>
      <th>Date</th>
      <th>Mandatory</th>
    </tr>
  </thead>  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.formatDate %></td>
        <td><%= event.isMandatory%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
