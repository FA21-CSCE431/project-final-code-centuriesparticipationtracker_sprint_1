<h1>Service Log Hours</h1>

<table class="mt-3 table listing">
  <thead class="header">
    <tr>
      <th>Hours</th>
      <th>Date</th>
      <th>Activity</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_loggers.each do |service_logger| %>
      <tr>
        <td><%= service_logger.hours %></td>
        <td><%= service_logger.date %></td>
        <td><%= service_logger.activity %></td>
        <td><%= service_logger.description_service %></td>

        <td class="row">
        <div class="col-2"><%= link_to("Show", service_logger_show_path, :class => 'action show') %></div>
        <div class="col-2"><%= link_to("Edit", service_logger_edit_path, :class => 'action show') %></div>
        <div class="col-2"><%= link_to("Delete", service_logger_delete_path, :class => 'action show') %></div>
        
      </td>

        
      </tr>
    <% end %>
  </tbody>
</table>

