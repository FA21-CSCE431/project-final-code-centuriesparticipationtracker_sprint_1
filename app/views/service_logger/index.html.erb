<h1>Service Log Hours</h1>

<table class="mt-3 table listing">
  <thead class="header">
    <tr>
      <th>Hours</th>
      <th>Service Hours ID</th>
      <th>Service Hour List ID</th>
      <th>Date</th>
      <th>Description</th>
      <th>Approval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_loggers.each do |service_logger| %>
      <tr>
        <td><%= service_logger.hours %></td>
        <td><%= service_logger.servicehoursID %></td>
        <td><%= service_logger.servicehourlistID %></td>
        <td><%= service_logger.date %></td>
        <td><%= service_logger.description %></td>
        <td><%= service_logger.isApproved %></td>

        <td class="row">
        <div class="col-2"><%= link_to("Show", service_logger_path(service_logger), :class => 'action show') %></div>
        <div class="col-2"><%= link_to("Edit", edit_service_logger_path(service_logger), :class => 'action show') %></div>
        <div class="col-2"><%= link_to("Delete", delete_service_logger_path(service_logger), :class => 'action show') %></div>
        
      </td>

        
      </tr>
    <% end %>
  </tbody>
</table>

