<div class="events index">
  <h2>Events</h2>

  <%= link_to("Add New Event", new_event_path, :class => 'action new') %>

  <table class="mt-3 table listing" summary="Event list">
    <tr class="header">
      <th>#</th>
      <th>Event</th>
      <th>Description</th>
      <th>Is Mandatory</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
    <% @events.each do |event| %>
    <tr>
        <td><%= event.id %></td>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td class="center"><%= event.isMandatory ? 'Yes' : 'No' %></td>
      <td><%= event.date %></td>
      <td class="row">
        <div class="col-2"><%= link_to("Show", event_path(event), :class => 'action show') %></div>
        <div class="col-2"><%= link_to("Edit", edit_event_path(event), :class => 'action edit') %></div>
        <div class="col-2"><%= link_to("Delete", delete_event_path(event), :class => 'action delete') %></div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
